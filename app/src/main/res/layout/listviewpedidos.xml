<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_home"
    tools:context=".Pedidos">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewProdutos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"


        >

        <TextView android:id="@+id/lbnumPedido"
            android:layout_width="70dp"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:text="Pedido Nº"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/numPedido"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:text=""
            />

        <TextView
            android:id="@+id/lbclientepedido"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:gravity="right"
            android:textSize="16dp"
            android:text="Cliente: "
            />

        <TextView
            android:id="@+id/clientepedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:text=""
            />

        <TextView
            android:id="@+id/lbsituacaoPedido"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:text="Situação: "
            />

        <TextView
            android:id="@+id/situacaoPedido"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:text=""
            />



    </GridLayout>



</RelativeLayout>